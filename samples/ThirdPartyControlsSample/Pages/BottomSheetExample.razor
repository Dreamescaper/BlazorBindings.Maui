@using BlazorBindings.Maui.Elements.The49.BottomSheet

<BottomSheet HasHandle="true">
    <Detents>
        <FullscreenDetent/>
        <MediumDetent/>
    </Detents>

    <ChildContent>
        <ScrollView Padding="32">
            <VerticalStackLayout Spacing="32">
                @for (int i = 0; i < 16; i++)
                {
                    var index = i;

                    <Border BackgroundColor="GetColor(index)"
                            CornerRadius="5"
                            Margin="5"
                            MinimumHeightRequest="24"
                            MinimumWidthRequest="24"
                            HorizontalOptions="LayoutOptions.Center">

                        <Label Text="@index.ToString()" />
                    </Border>
                }
            </VerticalStackLayout>
        </ScrollView>
    </ChildContent>
</BottomSheet>

@code {
    Color GetColor(int i) => colors[i % colors.Length];

    Color[] colors = [
        Colors.Salmon, Colors.Green, Colors.AliceBlue, Colors.Yellow
    ];
}
