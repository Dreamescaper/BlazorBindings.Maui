@inherits ElementTestBase

@code {
[Test]
public async Task BindedValueIsUpdatedWhenTextChanged()
{
    string text = null;
    var entry = await Render<MC.Editor>(@<Editor @bind-Text="text" />);

    entry.UpdateText("test123");

    Assert.That(text, Is.EqualTo("test123"));
}

[Test]
public async Task TextIsUpdatedWhenBindedValueChanged()
{
    string text = null;
    var entry = await Render<MC.Editor>(@<Editor @bind-Text="text" />);

    text = "test123";
    StateHasChanged();

    Assert.That(text, Is.EqualTo("test123"));
}
}