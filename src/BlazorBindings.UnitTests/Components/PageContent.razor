<ContentPage Title="@Title">
    <NonPageContent />
</ContentPage>

@code {
    [Parameter] public string Title { get; set; } = "Test";

    public static void ValidateContent(MC.Element content, string title = "Test")
    {
        var contentPage = content as MC.ContentPage;
        Assert.That(contentPage, Is.Not.Null);
        Assert.That(contentPage.Title, Is.EqualTo(title));
        NonPageContent.ValidateContent(contentPage.Content);
    }
}